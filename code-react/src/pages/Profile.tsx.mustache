import { useEffect, useState } from 'react';
import { useApiClient } from '../utils/apiClient';
import { useAuth } from '../hooks/useAuth';
import { AppPageLayout } from '../components/AppPageLayout';
import { ThemeSelector } from '../components/ThemeSelector';

interface UserProfile {
  id: number;
  username: string;
  email: string;
  firstName: string | null;
  lastName: string | null;
  picture: string | null;
  externalAuthProvider: string;
  externalAuthId: string;
  enabled: boolean;
  roles: string[];
}

interface ProfileResponse {
  requestId: string;
  response: UserProfile;
}

/**
 * User Profile Page
 *
 * Displays authenticated user's profile information from the backend
 * Calls GET /api/v1/protected/user/profile endpoint
 *
 * This is a test page to verify the complete Auth0 integration flow:
 * 1. Frontend Auth0Provider handles authentication
 * 2. JWT token sent in Authorization header
 * 3. Backend validates JWT and syncs user to database
 * 4. User profile returned from database with roles
 */
export function Profile() {
  const api = useApiClient();
  const { logout } = useAuth();
  const [profile, setProfile] = useState<UserProfile | null>(null);
  const [loading, setLoading] = useState(true);
  const [error, setError] = useState<string | null>(null);

  const handleLogout = () => {
    logout({
      logoutParams: {
        returnTo: `${window.location.origin}/auth0/logout`
      }
    });
  };

  useEffect(() => {
    async function loadProfile() {
      try {
        setLoading(true);
        setError(null);

        const data = await api.get<ProfileResponse>('/api/v1/protected/user/profile');
        setProfile(data.response);
      } catch (err) {
        console.error('Failed to load profile:', err);
        setError(err instanceof Error ? err.message : 'Failed to load profile');
      } finally {
        setLoading(false);
      }
    }

    loadProfile();
    // eslint-disable-next-line react-hooks/exhaustive-deps
  }, []);

  if (loading) {
    return (
      <AppPageLayout>
        <h1 className="text-2xl font-bold">Profile</h1>
        <p className="mt-4">Loading...</p>
      </AppPageLayout>
    );
  }

  if (error) {
    return (
      <AppPageLayout>
        <div className="flex justify-between items-center mb-6">
          <h1 className="text-2xl font-bold">Profile</h1>
          <button
            onClick={handleLogout}
            className="px-4 py-2 bg-destructive text-destructive-foreground rounded-md hover:bg-destructive/90 transition-colors"
          >
            Logout
          </button>
        </div>
        <div className="mt-4 text-destructive">
          <strong>Error:</strong> {error}
        </div>
      </AppPageLayout>
    );
  }

  if (!profile) {
    return (
      <AppPageLayout>
        <h1 className="text-2xl font-bold">Profile</h1>
        <p className="mt-4">No profile data available</p>
      </AppPageLayout>
    );
  }

  return (
    <AppPageLayout>
      <div className="flex justify-between items-center mb-6">
        <h1 className="text-3xl font-bold">User Profile</h1>
        <button
          onClick={handleLogout}
          className="px-4 py-2 bg-destructive text-destructive-foreground rounded-md hover:bg-destructive/90 transition-colors"
        >
          Logout
        </button>
      </div>

      <div className="space-y-6">
        {profile.picture && (
          <img
            src={profile.picture}
            alt="Profile"
            className="w-24 h-24 rounded-full"
          />
        )}

        <div className="border border-border rounded-lg overflow-hidden">
          <table className="w-full">
            <tbody className="divide-y divide-border">
              <tr>
                <td className="px-4 py-3 font-semibold text-sm bg-muted/50">ID</td>
                <td className="px-4 py-3 text-sm">{profile.id}</td>
              </tr>
              <tr>
                <td className="px-4 py-3 font-semibold text-sm bg-muted/50">Username</td>
                <td className="px-4 py-3 text-sm">{profile.username}</td>
              </tr>
              <tr>
                <td className="px-4 py-3 font-semibold text-sm bg-muted/50">Email</td>
                <td className="px-4 py-3 text-sm">{profile.email}</td>
              </tr>
              <tr>
                <td className="px-4 py-3 font-semibold text-sm bg-muted/50">First Name</td>
                <td className="px-4 py-3 text-sm">{profile.firstName || '-'}</td>
              </tr>
              <tr>
                <td className="px-4 py-3 font-semibold text-sm bg-muted/50">Last Name</td>
                <td className="px-4 py-3 text-sm">{profile.lastName || '-'}</td>
              </tr>
              <tr>
                <td className="px-4 py-3 font-semibold text-sm bg-muted/50">Auth Provider</td>
                <td className="px-4 py-3 text-sm">{profile.externalAuthProvider}</td>
              </tr>
              <tr>
                <td className="px-4 py-3 font-semibold text-sm bg-muted/50">External ID</td>
                <td className="px-4 py-3 text-sm text-muted-foreground">{profile.externalAuthId}</td>
              </tr>
              <tr>
                <td className="px-4 py-3 font-semibold text-sm bg-muted/50">Status</td>
                <td className="px-4 py-3 text-sm">
                  <span className={`inline-block px-2 py-1 rounded text-xs font-medium ${profile.enabled ? 'bg-green-100 text-green-800' : 'bg-red-100 text-red-800'}`}>
                    {profile.enabled ? 'Enabled' : 'Disabled'}
                  </span>
                </td>
              </tr>
              <tr>
                <td className="px-4 py-3 font-semibold text-sm bg-muted/50">Roles</td>
                <td className="px-4 py-3 text-sm">
                  <div className="flex flex-wrap gap-2">
                    {profile.roles.map((role, index) => (
                      <span
                        key={index}
                        className="inline-block px-2 py-1 rounded bg-primary text-primary-foreground text-xs font-medium"
                      >
                        {role}
                      </span>
                    ))}
                  </div>
                </td>
              </tr>
            </tbody>
          </table>
        </div>

        <div className="border border-border rounded-lg p-6">
          <ThemeSelector />
        </div>
      </div>
    </AppPageLayout>
  );
}
