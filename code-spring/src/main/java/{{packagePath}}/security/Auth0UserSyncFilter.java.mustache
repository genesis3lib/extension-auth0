/**
 * Auth0 User Sync Filter for {{{projectName}}}
 *
 * Runs after successful JWT authentication to synchronize Auth0 users with local database.
 *
 * Flow:
 * 1. Checks if request is authenticated with JWT
 * 2. Extracts user information from JWT claims (email, name, picture, sub)
 * 3. If email is missing from JWT, falls back to Auth0 userinfo endpoint
 * 4. Optionally extracts tenant ID from custom claim
 * 5. Calls UserService to upsert user with role assignment
 * 6. Fails fast with 500 if user sync fails
 *
 * @see UserService#createOrUpdateUser
 */
@Slf4j
@Component
@Profile("auth0")
public class Auth0UserSyncFilter extends OncePerRequestFilter {

    private final UserService userService;
    private final RestTemplate restTemplate;
    private final ObjectMapper objectMapper;
    private final AntPathMatcher pathMatcher = new AntPathMatcher();

    @Value("${app.security.public-uris}")
    private String publicUris;

    @Value("${app.auth0.issuer}")
    private String auth0Issuer;

    {{#tenantIdClaimKey}}
    @Value("${app.auth0.tenant-claim-key:{{tenantIdClaimKey}}}")
    private String tenantClaimKey;
    {{/tenantIdClaimKey}}

    public Auth0UserSyncFilter(UserService userService) {
        this.userService = userService;
        this.restTemplate = new RestTemplate();
        this.objectMapper = new ObjectMapper();
    }

    @Override
    protected void doFilterInternal(HttpServletRequest request, HttpServletResponse response, FilterChain filterChain)
            throws ServletException, IOException {

        Authentication auth = SecurityContextHolder.getContext().getAuthentication();

        // Only sync if authenticated with JWT
        if (auth != null && auth.isAuthenticated() && auth.getPrincipal() instanceof Jwt) {
            Jwt jwt = (Jwt) auth.getPrincipal();

            try {
                syncUserToDatabase(jwt);
            } catch (Exception e) {
                log.error("Failed to sync Auth0 user to database. Failing request.", e);
                response.setStatus(HttpServletResponse.SC_INTERNAL_SERVER_ERROR);
                response.setContentType("application/json");
                response.getWriter().write("{\"error\":\"User synchronization failed\",\"message\":\"" + e.getMessage() + "\"}");
                return;
            }
        }

        filterChain.doFilter(request, response);
    }

    /**
     * Synchronizes Auth0 user information to local database
     *
     * @param jwt The validated JWT token containing user claims
     */
    private void syncUserToDatabase(Jwt jwt) {
        // Extract user information from JWT claims
        String email = jwt.getClaimAsString("email");
        String auth0Id = jwt.getSubject(); // Format: "auth0|123456" or similar
        String firstName = jwt.getClaimAsString("given_name");
        String lastName = jwt.getClaimAsString("family_name");
        String picture = jwt.getClaimAsString("picture");

        // Fallback to Auth0 userinfo endpoint if email is missing from JWT
        if (StringUtils.isBlank(email)) {
            log.warn("Email claim missing from JWT token, falling back to Auth0 userinfo endpoint");
            Auth0UserInfo userInfo = fetchUserInfoFromAuth0(jwt.getTokenValue());
            email = userInfo.email;
            if (StringUtils.isBlank(firstName)) {
                firstName = userInfo.givenName;
            }
            if (StringUtils.isBlank(lastName)) {
                lastName = userInfo.familyName;
            }
            if (StringUtils.isBlank(picture)) {
                picture = userInfo.picture;
            }
        }

        if (StringUtils.isBlank(email)) {
            log.error("Email not available from JWT claims or Auth0 userinfo endpoint");
            throw new IllegalStateException("Email not available from JWT claims or Auth0 userinfo endpoint");
        }

        // Extract tenant ID from custom claim if configured
        {{#tenantIdClaimKey}}
        String tenantId = StringUtils.isNotBlank(tenantClaimKey) ?
                jwt.getClaimAsString(tenantClaimKey) : null;
        {{/tenantIdClaimKey}}
        {{^tenantIdClaimKey}}
        String tenantId = null;
        {{/tenantIdClaimKey}}

        log.info("Syncing Auth0 user to database: email={}, auth0Id={}, tenantId={}", email, auth0Id, tenantId);

        // Upsert user to database
        // UserService already handles role assignment based on app.users.root and app.users.admins
        userService.createOrUpdateUser(
                tenantId,
                email,           // username same as email
                "auth0",         // external auth provider
                auth0Id,         // external auth ID
                firstName,
                lastName,
                picture
        );

        log.info("Successfully synced user: {}", email);
    }

    /**
     * Fetches user info from Auth0 userinfo endpoint using the access token.
     * This is used as a fallback when email claim is not present in the JWT.
     *
     * @param accessToken The user's access token
     * @return Auth0UserInfo containing email and profile information
     */
    private Auth0UserInfo fetchUserInfoFromAuth0(String accessToken) {
        // Build userinfo URL from issuer (e.g., https://tenant.auth0.com/ -> https://tenant.auth0.com/userinfo)
        String userinfoUrl = auth0Issuer.endsWith("/")
                ? auth0Issuer + "userinfo"
                : auth0Issuer + "/userinfo";

        log.debug("Fetching user info from Auth0: {}", userinfoUrl);

        HttpHeaders headers = new HttpHeaders();
        headers.setBearerAuth(accessToken);
        HttpEntity<Void> requestEntity = new HttpEntity<>(headers);

        try {
            ResponseEntity<String> response = restTemplate.exchange(
                    userinfoUrl,
                    HttpMethod.GET,
                    requestEntity,
                    String.class
            );

            if (response.getStatusCode().is2xxSuccessful() && response.getBody() != null) {
                JsonNode json = objectMapper.readTree(response.getBody());
                Auth0UserInfo userInfo = new Auth0UserInfo();
                userInfo.email = getJsonString(json, "email");
                userInfo.givenName = getJsonString(json, "given_name");
                userInfo.familyName = getJsonString(json, "family_name");
                userInfo.picture = getJsonString(json, "picture");
                userInfo.name = getJsonString(json, "name");

                log.debug("Successfully fetched user info from Auth0: email={}", userInfo.email);
                return userInfo;
            } else {
                throw new RuntimeException("Auth0 userinfo endpoint returned non-success status: " + response.getStatusCode());
            }
        } catch (Exception e) {
            log.error("Failed to fetch user info from Auth0 userinfo endpoint", e);
            throw new RuntimeException("Failed to fetch user info from Auth0: " + e.getMessage(), e);
        }
    }

    private String getJsonString(JsonNode json, String field) {
        JsonNode node = json.get(field);
        return (node != null && !node.isNull()) ? node.asText() : null;
    }

    /**
     * Simple DTO to hold user info from Auth0 userinfo endpoint
     */
    private static class Auth0UserInfo {
        String email;
        String givenName;
        String familyName;
        String picture;
        String name;
    }

    @Override
    protected boolean shouldNotFilter(HttpServletRequest request) {
        // Skip filter for public URIs defined in app.security.public-uris
        String requestPath = request.getRequestURI();

        if (publicUris == null || publicUris.isEmpty()) {
            return false;
        }

        List<String> publicUriPatterns = Arrays.asList(publicUris.split(","));

        return publicUriPatterns.stream()
                .map(String::trim)
                .anyMatch(pattern -> pathMatcher.match(pattern, requestPath));
    }
}
