package {{{javaPackageFull}}}.config;

import lombok.extern.slf4j.Slf4j;
import org.springframework.beans.factory.annotation.Value;
import org.springframework.context.annotation.Bean;
import org.springframework.context.annotation.Configuration;
import org.springframework.context.annotation.Profile;
import org.springframework.web.cors.CorsConfiguration;
import org.springframework.web.cors.CorsConfigurationSource;
import org.springframework.web.cors.UrlBasedCorsConfigurationSource;

import java.net.MalformedURLException;
import java.net.URL;
import java.util.*;

/**
 * CORS Configuration for {{{projectName}}}
 *
 * Provides:
 * - Configurable allowed origins via cors.allowed-origins property
 * - Auto-includes www subdomain for each configured origin
 * - Auto-includes app domain and its www variant
 * - Standard CORS settings for API access
 */
@Configuration
@Profile("auth0")
@Slf4j
public class CorsConfig {

    @Value("${cors.allowed-origins:}")
    private String[] configuredOrigins;

    @Value("${app.domain:{{domain}}}")
    private String appDomain;

    @Bean
    public CorsConfigurationSource corsConfigurationSource() {
        CorsConfiguration config = new CorsConfiguration();

        // Build allowed origins list
        Set<String> origins = new LinkedHashSet<>();

        // Add configured origins
        if (configuredOrigins != null) {
            for (String origin : configuredOrigins) {
                if (origin != null && !origin.trim().isEmpty()) {
                    origins.add(origin.trim());
                }
            }
        }

        // Add app domain and its www variant
        if (appDomain != null && !appDomain.isEmpty()) {
            origins.add("https://" + appDomain);
            if (!appDomain.startsWith("www.")) {
                origins.add("https://www." + appDomain);
            }
        }

        // Auto-include www subdomain for each origin
        Set<String> withWww = new LinkedHashSet<>();
        for (String origin : origins) {
            withWww.add(origin);
            try {
                URL url = new URL(origin);
                String host = url.getHost();
                String protocol = url.getProtocol();
                int port = url.getPort();
                String portSuffix = (port > 0 && port != 80 && port != 443) ? ":" + port : "";

                if (!host.startsWith("www.") && !host.equals("localhost") && !host.matches("\\d+\\.\\d+\\.\\d+\\.\\d+")) {
                    // Add www version
                    String wwwOrigin = protocol + "://www." + host + portSuffix;
                    withWww.add(wwwOrigin);
                } else if (host.startsWith("www.")) {
                    // Add non-www version
                    String nonWwwHost = host.substring(4);
                    String nonWwwOrigin = protocol + "://" + nonWwwHost + portSuffix;
                    withWww.add(nonWwwOrigin);
                }
            } catch (MalformedURLException e) {
                log.warn("Invalid CORS origin URL: {}", origin);
            }
        }

        if (!withWww.isEmpty()) {
            config.setAllowedOrigins(new ArrayList<>(withWww));
            log.info("CORS allowed origins (with auto www): {}", withWww);
        } else {
            // Allow all if no origins configured (development mode)
            config.setAllowedOriginPatterns(List.of("*"));
            log.warn("⚠️ CORS SECURITY WARNING: No CORS_ALLOWED_ORIGINS configured!");
            log.warn("⚠️ All origins are currently allowed with credentials - this is INSECURE for production.");
            log.warn("⚠️ Set CORS_ALLOWED_ORIGINS environment variable before deploying to production.");
            log.warn("⚠️ Example: CORS_ALLOWED_ORIGINS=https://example.com,https://app.example.com");
        }

        config.setAllowedMethods(Arrays.asList("GET", "POST", "PUT", "DELETE", "PATCH", "OPTIONS"));
        config.setAllowedHeaders(Arrays.asList("*"));
        config.setExposedHeaders(Arrays.asList("Authorization", "Content-Type", "X-Requested-With"));
        config.setAllowCredentials(true);
        config.setMaxAge(3600L);

        UrlBasedCorsConfigurationSource source = new UrlBasedCorsConfigurationSource();
        source.registerCorsConfiguration("/**", config);
        return source;
    }
}
