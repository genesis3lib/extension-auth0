app:
  auth:
    provider: auth0
  auth0:
    domain: ${AUTH0_DOMAIN:{{{auth0Domain}}}}
    # Issuer is auto-derived from domain if not explicitly set
    issuer: ${AUTH0_ISSUER_URI:}
    audiences: ${AUTH0_AUDIENCE:https://{{projectName}}-api.{{domain}}/api/v1/}
    role-claim-key: {{{roleClaimKey}}}
    {{#tenantIdClaimKey}}
    tenant-claim-key: {{{tenantIdClaimKey}}}
    {{/tenantIdClaimKey}}
  users:
    root: ${SPRING_ENV_ROOT_USER:}
    admins: ${SPRING_ENV_ADMIN_USERS:}
  sync:
    create-user-on-first-login: ${AUTH0_SYNC_CREATE_USER:{{syncUserOnFirstLogin}}}
    update-user-on-each-login: ${AUTH0_SYNC_UPDATE_USER:{{updateUserOnEachLogin}}}

spring:
  security:
    oauth2:
      resourceserver:
        jwt:
          # Auto-derive from domain if issuer not explicitly set
          issuer-uri: ${AUTH0_ISSUER_URI:https://${AUTH0_DOMAIN:{{{auth0Domain}}}}/}
          jwk-set-uri: https://${AUTH0_DOMAIN:{{{auth0Domain}}}}/.well-known/jwks.json

cors:
  allowed-origins: ${CORS_ALLOWED_ORIGINS:}
